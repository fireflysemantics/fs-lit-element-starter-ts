{
  "name": "fs-typescript-starter",
  "version": "1.1.0",
  "description": "A typescript starter project by Firefly Semantics Corporation",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:clean && tsc",
    "build:clean": "rimraf build",
    "build:watch": "npm run clean:build && tsc --watch",
    "playwright-init": "npx playwright install",
    "release": "npx release-it",
    "prepare": "husky"
  },
  "bugs": "https://github.com/fireflysemantics/fs-typscript-starter/issues",
  "homepage": "https://github.com/fireflysemantics/fs-typscript-starter/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fireflysemantics/fs-typscript-starter.git"
  },
  "keywords": [
    "starter-project",
    "github",
    "flow",
    "pull-requests",
    "README",
    "LICENSE",
    "Typescript",
    "typescript-eslint",
    "prettier",
    "lint-staged",
    "husky",
    "hooks",
    "git",
    "testing"
  ],
  "author": "Firefly Semantics Corporation",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@open-wc/testing": "^4.0.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/mocha": "^10.0.7",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-legacy": "^2.1.1",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-playwright": "^0.11.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "release-it": "^17.4.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "type": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
